{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "moduleDirectories": ["<rootDir>/src", "<rootDir>/lib", "node_modules"],
  "globals": {
    "ts-jest": {
      "babelConfig": true,
      "diagnostics": false
    }
  },
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": "ts-jest"
  },
  "testPathIgnorePatterns": [
    "<rootDir>/coverage",
    "<rootDir>/dist",
    "<rootDir>/node_modules",
    "<rootDir>/utils",
    "<rootDir>/babel.config.js"
  ],
  "collectCoverageFrom": ["lib/**/*.{ts,tsx}"],
  "setupFilesAfterEnv": ["<rootDir>/utils/setupTests/index.ts"]
}
