{
  "testEnvironment": "jsdom",
  "moduleDirectories": ["<rootDir>/src", "<rootDir>/lib", "node_modules"],
  "moduleNameMapper": {
    "~(.*)$": "<rootDir>/$1"
  },
  "transform": {
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  "testPathIgnorePatterns": [
    "<rootDir>/coverage",
    "<rootDir>/config",
    "<rootDir>/dist",
    "<rootDir>/node_modules",
    "<rootDir>/utils",
    "<rootDir>/babel.config.js",
    "<rootDir>/next.config.js"
  ],
  "collectCoverageFrom": ["lib/**/*.{js,jsx}"],
  "setupFilesAfterEnv": ["<rootDir>/utils/setupTests/index.js"]
}
